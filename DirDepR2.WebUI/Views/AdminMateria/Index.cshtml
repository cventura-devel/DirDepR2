@model IEnumerable<DirDepR2.Domain.Entities.Materia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminProfesorLayout.cshtml";
}

<div class="panel panel-default">

    <div class="panel-heading">
        <h3>Materias</h3>
    </div>

    <div class="panel-body">
        @using(Html.BeginForm())
        {
            <p>Find by name: @Html.TextBox("searchString")
            <input type="submit" value="Search" />
            </p>
        }


        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">Clave</th>
                <th>Nombre</th>
                <th class="text-right">Unidades</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var materia in Model)
            {
                <tr>
                    <td class="text-right">@materia.ClaveMateria</td>
                    <td>@Html.ActionLink(materia.Nombre, "Edit", new { materia.ID })</td>
                    <td class="text-right">@materia.Unidades</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "AdminMateria"))
                        {
                            @Html.Hidden("ID", materia.ID)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }


                    </td>
                </tr>
            }

        </table>

    </div>

    <div class="panel-footer">
        @Html.ActionLink("Añadir nueva materia", "Create", null, new { @class = "btn btn-default" })
    </div>

</div>
